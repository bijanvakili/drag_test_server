{
  "name": "drag_test_server",
  "version": "0.1.0",
  "description": "Drag Test Server",
  "main": "./dist/index.js",
  "author": "Bijan Vakili <bijanvakili@users.noreply.github.com>",
  "license": "MIT",
  "dependencies": {
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "markdownlint": "^0.23.1",
    "markdownlint-cli": "^0.27.1",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1"
  },
  "scripts": {
    "build": "tsc --project ./tsconfig.json",
    "build:watch": "tsc --project ./tsconfig.json --watch",
    "clean:all": "rm -rf ./dist ./node_modules",
    "clean": "rm -rf ./dist",
    "todos": "grep -R TODO src/*",
    "main": "node ./dist/index.js",
    "lint-md": "markdownlint",
    "lint-md-all": "markdownlint *.md docs/",
    "lint-prettier": "prettier --check --loglevel warn",
    "lint-prettier-all": "prettier --check .",
    "lint-ts": "eslint --ext .ts"
  }
